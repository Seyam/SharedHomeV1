<?xml version="1.0" encoding="utf-8"?>
<!-- START*** Root Container *** -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="9dp"
    card_view:cardElevation="12dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout_field"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">



        <ImageView
            android:id="@+id/image_view_hotel_pic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:paddingBottom="@dimen/dp10"/>


        <!-- TextView Employee Name -->
        <TextView
            android:id="@+id/txt_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:fontFamily="serif-monospace"
            android:paddingLeft="10dp"
            android:paddingBottom="@dimen/dp10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textColor="@color/red"/>


        <!-- TextView Employee Email -->
        <TextView
            android:id="@+id/txt_description_field"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp10"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <!-- TextView Employee Phone -->
        <TextView
            android:id="@+id/txt_avgFare_field"
            android:layout_width="match_parent"
            android:fontFamily="serif-monospace"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBarTeal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
    <!-- END*** Root Container *** -->