<?xml version="1.0" encoding="utf-8"?>
<!-- START*** Root Container *** -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="9dp"
    card_view:cardElevation="9dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout_field"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:divider="?android:dividerHorizontal"
        android:showDividers="none">


        <ImageView
            android:id="@+id/image_view_hotel_pic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:paddingBottom="@dimen/dp10"/>


        <!--<View style="@style/Divider.Horizontal"/>-->


        <TextView
            android:id="@+id/txt_total_bed_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="38dp"
            android:fontFamily="serif-monospace"
            android:paddingTop="@dimen/dp10"
            android:paddingLeft="10dp"
            android:paddingBottom="@dimen/dp10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textColor="@color/red"/>

        <!--<View style="@style/Divider.Horizontal"/>-->

        <TextView
            android:id="@+id/txt_bed_booked_field"
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingBottom="@dimen/dp10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt_bed_available_field"
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingBottom="@dimen/dp10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/green"/>

        <View style="@style/Divider.Horizontal"/>

        <TextView
            android:id="@+id/txt_kitchen_field"
            android:layout_width="match_parent"
            android:fontFamily="serif-monospace"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/txt_washroom_field"
            android:layout_width="match_parent"
            android:fontFamily="serif-monospace"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <View style="@style/Divider.Horizontal"/>

        <TextView
            android:id="@+id/txt_amenities_field"
            android:layout_width="match_parent"
            android:fontFamily="serif-monospace"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <!--<View style="@style/Divider.Horizontal"/>-->

        <Button
            android:id="@+id/requestButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Request to Book"
            android:textColor="@color/white"
            android:background="@color/buttonRed"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
    <!-- END*** Root Container *** -->